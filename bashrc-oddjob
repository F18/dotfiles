#
# Custom function defintions
#
function subdir-run() 
{ 
  for dir in */; do
    echo $dir;
    cd $dir;
    nice -19 $HOME/optima/optima2D/OPTIMA2D_x86_64; 
    cd ../
  done
}
function run() { nice -19 $HOME/optima/optima2D/OPTIMA2D_x86_64; }

