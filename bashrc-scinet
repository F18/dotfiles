#
# Custom function defintions
#
function subdir-run() 
{ 
  for dir in */; do
    echo $dir;
    cd $dir;
    qsub runsci.pbs; 
    cd ../
  done
}
function run() { qsub runsci.pbs; }
function run-clean() 
{  
  2-cleanup-snopt
  /bin/cp -f $MYHOME/optima/optima2D/OPTIMA2D_x86_64
  qsub runsci.pbs;
}

